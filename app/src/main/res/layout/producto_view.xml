<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_margin="15dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramelfrap"/>
    
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/color_name_product"
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"
            />
        <TextView
        android:id="@+id/producto_desc"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:textStyle="normal"
            android:textColor="@color/color_desc_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion del producto"
        />
    </LinearLayout>
    
    <TextView
        android:id="@+id/producto_precio"
        android:textStyle="bold"
        android:textColor="@color/color_price_product"
        android:textSize="19sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="$5.00"
        />

</LinearLayout>